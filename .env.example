# Cognitive Engine Configuration

# Server
PORT=4000
HOST=0.0.0.0
NODE_ENV=development

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/cognitiveengine

# Abstraction Settings
MAX_ABSTRACTION_LEVELS=5
PATTERN_CONFIDENCE_THRESHOLD=0.7
INSIGHT_NOVELTY_THRESHOLD=0.6
MIN_PATTERN_OCCURRENCES=3

# Dream Mode
DREAM_EXPLORATION_DEPTH=5
DREAM_MAX_COMBINATIONS=100
DREAM_TEMPERATURE=0.7

# Caching
REDIS_ENABLED=true
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# LLM Integration (Optional)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# WebSocket
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=500
